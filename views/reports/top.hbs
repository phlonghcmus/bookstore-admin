        Chart.defaults.global.defaultFontSize = 18;
        Chart.defaults.global.defaultFontColor = 'white';
        let massPopChart = new Chart(myChart,{
            type:'bar',
            data:{
                labels:['{{products.[0].title}}','{{products.[1].title}}','{{products.[2].title}}','{{products.[3].title}}','{{products.[4].title}}','{{products.[5].title}}','{{products.[6].title}}','{{products.[7].title}}','{{products.[8].title}}','{{products.[9].title}}'],
                datasets:[{
                    label:'SỐ LƯỢNG(QUYỂN)',
                    data:[
