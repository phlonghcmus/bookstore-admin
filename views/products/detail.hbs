<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Chỉnh sửa sản phẩm</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-6 col-lg-6 col-md-12">
                        <form action="/products/{{id}}/update" method="post" class="tm-edit-product-form" enctype="multipart/form-data">
                            <div class="form-group mb-3">

                                <label
                                        for="id"
                                >ID
                                </label>
                                <input
                                        id="id"
                                        name="id"
                                        type="text"
                                        value="{{id}}"
                                        class="form-control validate"
                                        disabled="disabled"
                                        style="background-color: #54657D"
                                />
                            </div>
                            <div class="form-group mb-3">

                                <label
                                        for="name"
                                >Tên Sách
                                </label>
                                <input
                                        id="name"
                                        name="name"
                                        type="text"
                                        value="{{title}}"
                                        class="form-control validate"
                                />
                            </div>
                            <div class="form-group mb-3">
                                <label
                                        for="description"
                                >Thông tin</label
                                >
                                <input
                                        id="detail"
                                        name="detail"
                                        type="text"
                                        value="{{detail}}"
                                        class="form-control validate tm-small"
                                        rows="5"
                                        required
                                >
                            </div>
                            <div class="form-group mb-3">
                                <label
                                        for="category"
                                > Nhãn Sách</label
                                >
                                <select
                                        class="custom-select tm-select-accounts"
                                        id="category"
                                >
                                {{#each categories}}
                                    <option>{{category_name}}</option>
                                {{/each}}
                                </select>
                            </div>
                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label
                                            for="author"
                                    >Tác giả
                                    </label>
                                    <input
                                            id="author"
                                            name="author"
                                            type="text"
                                            value="{{author}}"
                                            class="form-control validate"
                                    />
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label
                                            for="price"
                                    >Giá
                                    </label>
                                    <input
                                            id="price"
                                            name="price"
                                            type="text"
                                            value="{{basePrice}}"
                                            class="form-control validate"
                                    />
                                </div>
                            </div>

                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                        <div class="tm-product-img-edit mx-auto">
                            <img src="{{cover}}" alt="Ảnh Sản Phẩm" class="img-fluid d-block mx-auto">

                        </div>
                        <div class="custom-file mt-3 mb-3">
                            <input id="avatar" type="file" name="avatar"style="display:none;" />
                             <input
                                    type="button"
                                    class="btn btn-primary btn-block mx-auto"
                                    value="THAY ĐỔI ẢNH NỀN"
                                    onclick="document.getElementById('avatar').click();"
                            />
                        </div>
                    </div>
                    <div class="col-12">

                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Lưu chỉnh sửa</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
