<div class="container-sm">
            <div class="row" style="margin-left: 5%">
                <div class="col">
                    <p class="text-white mt-5 mb-5">Welcome back, <b>Admin</b></p>
                </div>
            </div>
                <div class="col-12 tm-block-col">
                    <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                        <h2 class="tm-block-title">Orders List</h2>
                        <table class="table" >
                            <thead>
                                <tr>
                                    <th scope="col">ORDER NO.</th>
                                    <th scope="col">TÌNH TRẠNG</th>
                                    <th scope="col">MAIL KHÁCH HÀNG</th>
                                    <th scope="col">ĐỊA ĐIỂM GIAO</th>
                                    <th scope="col">NGÀY ĐẶT HÀNG</th>
                                </tr>
                            </thead>
                            {{#each orders}}
                            <tbody>
                                <tr>
                                    <th scope="row"><a href="/orders/orderDetail/{{_id}}">{{_id}}</a></th>
                                    <td>
                                        {{#compare status 1}}
                                            <div class="tm-status-circle received">
                                            </div>Đã Tiếp Nhận
                                        {{/compare}}
                                        {{#compare status 2}}
                                            <div class="tm-status-circle wrapping">
                                            </div>Đang Gói Hàng
                                        {{/compare}}
                                        {{#compare status 3}}
                                            <div class="tm-status-circle moving">
                                            </div>Đang Giao Hàng
                                        {{/compare}}
                                        {{#compare status 5}}
                                            <div class="tm-status-circle cancelled">
                                            </div>Đã Hủy
                                        {{/compare}}
                                        {{#compare status 4}}
                                            <div class="tm-status-circle delivered">
                                            </div>Đã Giao
                                        {{/compare}}
                                    </td>
                                    <td><b>{{email}}</b></td>
                                    <td><b>{{place}}</b></td>
                                    <td>{{order_date}}</td>
                                </tr>
                            </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
                
</div>
